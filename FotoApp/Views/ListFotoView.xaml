<UserControl x:Class="FotoApp.Views.ListFotoView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FotoApp.Views"
             xmlns:models="clr-namespace:FotoApp.Models"
              xmlns:cm="clr-namespace:Caliburn.Micro;assembly=Caliburn.Micro.Platform"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Rectangle Panel.ZIndex="-1" Fill="White"  Stroke="Blue"  StrokeThickness="2"
                       Opacity=".1" RadiusX="8" RadiusY="8"/>
        <ItemsControl ItemsSource="{Binding FotoData, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                      ItemTemplate="{StaticResource ListCheckBox}"
                      ItemsPanel="{StaticResource ListPanel}"
                      Margin="10,10,10,10"/>
    </Grid>
</UserControl>
