<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FotoApp.Views"
             xmlns:Custom="http://schemas.microsoft.com/winfx/2006/xaml/presentation/ribbon" x:Class="FotoApp.Views.GetFotoView"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1200">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition  Width="*"/>
            <ColumnDefinition Width="100"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="200"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="100"/>
        </Grid.RowDefinitions>

        <ContentControl x:Name="Images" Grid.Column="1" HorizontalAlignment="Stretch"  VerticalAlignment="Stretch"
                        Margin="10,10,10,10" Grid.Row="1" >

            <Rectangle Panel.ZIndex="-1" Fill="White"  Stroke="Blue"  StrokeThickness="2"
                       Opacity=".1" RadiusX="8" RadiusY="8"/>

        </ContentControl>
        <WrapPanel  HorizontalAlignment="Stretch"  VerticalAlignment="Stretch"   
                     Grid.Row="0" Grid.Column="1">
            
            <RadioButton Content="RadioButton" Style="{StaticResource FotoAppRadioButton}" 
                         Height="50"  Width="150" Margin="20,20,20,20" GroupName="1"/>
            <RadioButton Content="RadioButton" Style="{StaticResource FotoAppRadioButton}" 
                         Height="50"  Width="150" Margin="20,20,20,20" GroupName="1"/>
            <RadioButton Content="RadioButton" Style="{StaticResource FotoAppRadioButton}" 
                         Height="50"  Width="150" Margin="20,20,20,20" GroupName="1"/>
            <RadioButton Content="RadioButton" Style="{StaticResource FotoAppRadioButton}" 
                         Height="50"  Width="150" Margin="20,20,20,20" GroupName="1"/>
            <RadioButton Content="RadioButton" Style="{StaticResource FotoAppRadioButton}" 
                         Height="50"  Width="150" Margin="20,20,20,20" GroupName="1"/>
            <RadioButton Content="RadioButton" Style="{StaticResource FotoAppRadioButton}" 
                         Height="50"  Width="150" Margin="20,20,20,20" GroupName="1"/>
            <RadioButton Content="RadioButton" Style="{StaticResource FotoAppRadioButton}" 
                         Height="50"  Width="150" Margin="20,20,20,20" GroupName="1"/>
            <RadioButton Content="RadioButton" Style="{StaticResource FotoAppRadioButton}" 
                         Height="50"  Width="150" Margin="20,20,20,20" GroupName="1"/>
        </WrapPanel>

        <StackPanel  HorizontalAlignment="Stretch"  VerticalAlignment="Stretch"   Margin="0,0,0,326"
                     Grid.Row="0" Grid.RowSpan="2" Grid.Column="0">
            <Button Name="Cart" Content="Cart" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" 
                    Height="50" Margin="20,20,20,20" Style="{StaticResource FotoAppButton}"/>
            <Button Name="Cd" Content="CD" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"  
                    Height="50" Margin="20,20,20,20" Style="{StaticResource FotoAppButton}"/>
            <Button Name="Usb1" Content="USB 1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" 
                    Height="50" Margin="20,20,20,20" Style="{StaticResource FotoAppButton}"/>
            <Button Name="Usb2" Content="USB 2" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" 
                    Height="50" Margin="20,20,20,20" Style="{StaticResource FotoAppButton}"/>
        </StackPanel>

        <Grid  Margin="18,179,22,21" VerticalAlignment="Bottom"
               Grid.Row="1" Grid.Column="0" Grid.RowSpan="2">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="50"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="40"/>
                <RowDefinition Height="40"/>
                <RowDefinition Height="40"/>
                <RowDefinition Height="40"/>
            </Grid.RowDefinitions>

            <TextBlock HorizontalAlignment="Stretch" VerticalAlignment="Stretch" 
                       TextWrapping="Wrap"  Text="Ilość zdięc:" Style="{StaticResource Text}" 
                       Grid.Row="0" Grid.Column="0"/>

            <TextBlock HorizontalAlignment="Stretch" VerticalAlignment="Stretch" 
                       TextWrapping="Wrap"  Text="Rabat:" Style="{StaticResource Text}"
                       Grid.Row="1" Grid.Column="0" />

            <TextBlock HorizontalAlignment="Stretch" VerticalAlignment="Stretch" 
                       TextWrapping="Wrap"  Text="Cena: " Style="{StaticResource Text}"
                       Grid.Row="2" Grid.Column="0" />

            <TextBlock HorizontalAlignment="Stretch" VerticalAlignment="Stretch" 
                       TextWrapping="Wrap"  Text="2" Style="{StaticResource Text1}"
                       Grid.Row="0" Grid.Column="1"/>

            <TextBlock HorizontalAlignment="Stretch" VerticalAlignment="Stretch" 
                       TextWrapping="Wrap"  Text="50%" Style="{StaticResource Text1}"
                       Grid.Row="1" Grid.Column="1" />

            <TextBlock HorizontalAlignment="Stretch" VerticalAlignment="Stretch" 
                       TextWrapping="Wrap"  Text="70zł " Style="{StaticResource Text1}"
                       Grid.Row="2" Grid.Column="1" />

            <Rectangle Panel.ZIndex="-1" Fill="White"  Stroke="Blue"  StrokeThickness="2"
                       Opacity=".1" RadiusX="8" RadiusY="8"
                       Grid.ColumnSpan="2" Grid.Column="0" Grid.Row="0" Grid.RowSpan="5" />

        </Grid>


        <Button
            Name="Ok"
            Content="Zatwierdz"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            Margin="20,20,20,20"
            Grid.Column="1" Grid.Row="2"
            Style="{StaticResource FotoAppButton}" />

    </Grid>
</UserControl>
