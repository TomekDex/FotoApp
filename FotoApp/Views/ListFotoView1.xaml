<UserControl x:Class="FotoApp.Views.ListFotoView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:fotoColection="clr-namespace:FotoApp.Models.FotoColection"
             xmlns:control="clr-namespace:FotoApp.Controls"
             xmlns:cal="http://www.caliburnproject.org"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="600 ">
    
    <UserControl.Triggers>
        <EventTrigger RoutedEvent="UIElement.MouseRightButtonDown">
            <BeginStoryboard Storyboard="{StaticResource OnMouseRightButtonDown1}"/>
        </EventTrigger>
    </UserControl.Triggers>

    <Grid>

        <ItemsControl ItemsSource="{Binding Path=FotoData, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                      ItemTemplate="{StaticResource ListCheckBox2}"
                      ItemsPanel="{StaticResource ListPanel}"
                      Margin="10,514,10,10" >

        </ItemsControl>

       
    </Grid>
</UserControl>
