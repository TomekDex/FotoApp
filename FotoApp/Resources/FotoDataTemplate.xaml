<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:Action="clr-namespace:Caliburn.Micro;assembly=Caliburn.Micro.Platform"
                    xmlns:local="clr-namespace:FotoApp.Models"
                    xmlns:radio="clr-namespace:FotoApp.Models.ChangePapersAnSiseModel"
                    xmlns:Enum="clr-namespace:FotoApp.Enum">
    <DataTemplate   x:Key="ListCheckBox" DataType="local:Data">
        <CheckBox   HorizontalAlignment="Left" Width="300" 
                        Style="{StaticResource FotoAppCheckBox}" 
                        Action:Message.Attach="[Event Click] = [Action ActiveChechBox($dataContext)]"
                        IsChecked="{Binding Chekerd, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
            <StackPanel>
                <Image Source="{Binding bitmap}"
                       Margin="10,10,10,10" />

            </StackPanel>
        </CheckBox>
    </DataTemplate>
    <DataTemplate x:Key="TapeListRadoButon" DataType="radio:Types">
        <RadioButton Content="Papier Matowy" Style="{StaticResource FotoAppRadioButton}"
                     IsChecked="{Binding TypeList, ConverterParameter={x:Static Enum:Paper.MatPaper}, Converter={StaticResource ToEnumConverter}, Mode=OneWayToSource}"
                     Height="50"  Width="150" 
                     Margin="20,20,20,20" 
                     GroupName="Paper"/>
    </DataTemplate>
    <ItemsPanelTemplate x:Key="ListPanel" >
        <WrapPanel Margin="10,10,10,10"/>
    </ItemsPanelTemplate>
</ResourceDictionary>